#:import hex kivy.utils.get_color_from_hex
#:import get_hex kivy.utils.get_hex_from_color

<Container>:
    orientation: 'vertical'

    label: label
    text_input: text_input

    Label:
        id: label
        text:'pushing p'
        color: hex('#ffffff')

    TextInput:
        id: text_input
        multiline: False
        font_size: 20

    Button:
        text: get_hex(self.background_color)
        color: hex('#000000')
        background_normal: ''
        background_color: hex('#ff0000')
        color_name: 'красный'

        on_press: 
            root.button_click(self.background_color, self.color_name)
    
